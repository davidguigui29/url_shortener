<odoo>
    <record id="view_short_url_list" model="ir.ui.view">
        <field name="name">short.url.list</field>
        <field name="model">short.url</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="original_url"/>
                <field name="short_url"/>
                <field name="click_count"/>
            </list>
        </field>
    </record>

    <record id="view_short_url_form" model="ir.ui.view">
        <field name="name">short.url.form</field>
        <field name="model">short.url</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="original_url"/>
                        <field name="short_code" readonly="1"/>
                        <field name="short_url" readonly="1"/>
                        <field name="click_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_short_url" model="ir.actions.act_window">
        <field name="name">Short URLs</field>
        <field name="res_model">short.url</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_url_shortener_root" name="URL Shortener" sequence="10"/>
    <menuitem id="menu_short_url" name="Short URLs" parent="menu_url_shortener_root" action="action_short_url"/>

</odoo>
